<h2>Follower Users</h2>
		<% if @user.follower_users.blank? %>
		  ユーザーはいません
		<% else %>

  		<table class="table">
  			<thead>
  				<tr>
  					<th>image</th>
  					<th>name</th>
  					<th colspan="3"></th>
  				</tr>
  			</thead>

  			<tbody>
  				<% @user.follower_users.each do |user| %>
  				<tr>
  					<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
  					<td><%= user.name %></td>
  					<th>フォロー数：<%= user.follower.count %></th>
  					<th>フォロワー数：<%= user.followed.count %></th>
  					<td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
  				</tr>
  				<% end %>
  			</tbody>
  		</table>
  	<% end %>